makePlane
{
type surfaces;

libs ("libsampling.so");

surfaceFormat ensight;

formatOptions
{
    ensight
    {
	format ascii;
    }
}

interpolationScheme cell;

fields (T);

surfaces
(
    s1
    {
        type plane;
        planeType pointAndNormal;
        pointAndNormalDict
        {
            basePoint (0.2 0.2 0.2);
            normalVector (0 3 1);
        }
        //interpolate false;
        triangulate false;
    }
);
}

